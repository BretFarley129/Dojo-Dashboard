<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }
    
    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
    
    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<h1> Listing <%= @dojos.length%> Dojos</h1>
<table>
    <tr>
        <th>Branch</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
    </tr>
    <% @dojos.each do |dojo| %>
        <tr>
            <td><%= dojo.branch %></td>
            <td><%= dojo.street %></td>
            <td><%= dojo.city %></td>
            <td><%= dojo.state %></td>
            <td>
                <a href="/dojos/<%= dojo['id'] %>">Show</a> |
                <a href="/dojos/<%= dojo['id'] %>/edit">Edit</a> |
                <a href="/dojos/<%= dojo['id'] %>/delete" data-method="delete">Destroy</a> 
            </td>
        </tr>
    <% end %>
</table>
<br>
<a href="/dojos/new">New Dojo</a>